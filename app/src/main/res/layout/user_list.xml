<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        app:cardElevation="1dp"
        app:cardCornerRadius="2dp"
        app:contentPadding="3dp"
        android:layout_height="wrap_content"
>
    <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content" tools:ignore="MissingConstraints">
        <ImageView
                android:layout_width="70dp"
                android:src="@drawable/ic_person"
                android:layout_height="70dp" android:id="@+id/user_list_profileImg">
        </ImageView>
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingLeft="3dp"
                android:paddingTop="3dp"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="match_parent"
                    android:text="Person Name"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" android:textSize="18sp" android:id="@+id/user_list_name">
            </TextView>
            <TextView
                    android:layout_width="match_parent"
                    android:text="Email "
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" android:id="@+id/user_list_email">
            </TextView>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>